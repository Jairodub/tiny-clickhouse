<clickhouse>
    <users>
        <default>
            <!-- To use a plaintext password (NOT RECOMMENDED for production): -->
            <!-- <password>changeme</password> -->

            <!-- Using SHA256 hex is recommended for static files. 
                 However, for dynamic environments like Railway/Docker, 
                 we can pull the password from an environment variable.
            -->
            <password remove="1" />
            <password_sha256_hex remove="1" />
            <password from_env="CLICKHOUSE_PASSWORD" />
        </default>
    </users>
</clickhouse>
